    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/loadingScreenTitleCol</item>
        <!-- Add more customization attributes if needed -->
    </style>

    <style name="CustomProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="testButtonTextStyle">
